{
  "manifest_version": 3,
  "name": "Feedless",
  "version": "0.1",
  "description": "Control news feeds on sites like YouTube, Twitter, and Reddit.",
  "action": {
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings/index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "settings/index.html",
  "background": [
    {
      "service-worker" : "dist/background/background-worker.js",
      "type": "module"
    }
  ]
}
