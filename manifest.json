{
  "manifest_version": 3,
  "name": "Feedless",
  "version": "0.1",
  "description": "Control news feeds on sites like YouTube, Twitter, and Reddit.",
  "action": {
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings/index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "settings/index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/app.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ]
}
